
public class Person {
	static String s;
	static int i;
	public static void main(String[] args) {
		Person P = new Person(s, i);
	}
	Person(String string, int i) {
		
	}
	String getFirstName() {
		int j = s.length();
		for(int i = 0; i<j; i++) {
			if(s.charAt(i)==' ') {
				j = i;
				break;
			}
		}
		return s.substring(0, j);
	}
}
